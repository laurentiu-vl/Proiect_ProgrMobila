<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnOrderPreserved="false"
    tools:context=".Options"
    android:background="@drawable/optionscreen">

    <TableLayout
        android:layout_width="303dp"
        android:layout_height="195dp"
        android:background="@color/yellow"
        android:paddingStart="15dp"

        android:paddingEnd="15dp"
        android:stretchColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.396">


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">


            <ImageView
                android:id="@+id/eyeColorSwipeLeft"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="1"
                android:layout_gravity="start"
                app:srcCompat="@drawable/left_arrow" />

            <ImageView
                android:id="@+id/eyeColorSwipeRight"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="3"
                android:layout_gravity="end"
                app:srcCompat="@drawable/right_arrow" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/jacketColorSwipeLeft"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="1"
                android:layout_gravity="start"
                app:srcCompat="@drawable/left_arrow" />

            <ImageView
                android:id="@+id/jacketColorSwipeRight"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="3"
                android:layout_gravity="end"
                app:srcCompat="@drawable/right_arrow" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/pantsColorSwipeLeft"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="1"
                android:layout_gravity="start"
                app:srcCompat="@drawable/left_arrow" />

            <ImageView
                android:id="@+id/pantsColorSwipeRight"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="3"
                android:layout_gravity="end"
                app:srcCompat="@drawable/right_arrow" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/shoeColorSwipeLeft"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="1"
                android:layout_gravity="start"
                app:srcCompat="@drawable/left_arrow" />

            <ImageView
                android:id="@+id/shoeColorSwapRight"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_column="3"
                android:layout_gravity="end"
                app:srcCompat="@drawable/right_arrow" />
        </TableRow>
    </TableLayout>

    <CheckBox
        android:id="@+id/soundOption"
        style="@style/optionButtonStyle"
        android:text="@string/option1"
        android:textColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.236"
        tools:ignore="TextContrastCheck" />

    <CheckBox
        android:id="@+id/musicOption"
        style="@style/optionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option2"
        android:textColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369"
        tools:ignore="TextContrastCheck" />

    <CheckBox
        android:id="@+id/disableSkipButtonOption"
        style="@style/optionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option4"
        android:textColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.633"
        tools:ignore="TextContrastCheck" />

    <CheckBox
        android:id="@+id/statisticsBarOption"
        style="@style/optionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option3"
        android:textColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/optionsTitle"
        android:layout_width="331dp"
        android:layout_height="31dp"
        android:layout_weight="1"
        android:fontFamily="@font/croissant_one"
        android:gravity="center"
        android:text="@string/optionsTitle"
        android:textColor="@color/purple_700"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <Button
        android:id="@+id/optionsBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backButtonOptionText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928" />

</androidx.constraintlayout.widget.ConstraintLayout>